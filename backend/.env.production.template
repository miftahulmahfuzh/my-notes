# Production Environment Variables Template
# Copy this file to .env.production and fill in your values
#
# NOTE: This file is in YAML format for Cloud Run deployment
# (not the typical KEY=value format)

# Database Configuration
# For Cloud Run + Cloud SQL, use Unix socket path
# Format: /cloudsql/PROJECT:REGION:INSTANCE
DB_HOST: "/cloudsql/YOUR_PROJECT_ID:us-central1:my-notes-db"
DB_PORT: "5432"
DB_NAME: "notes_prod"
DB_USER: "postgres"
DB_PASSWORD: "YOUR_STRONG_PASSWORD_HERE"

# JWT Secret - generate with: openssl rand -base64 42
JWT_SECRET: "YOUR_JWT_SECRET_HERE"

# Application Settings
APP_ENV: "production"
APP_DEBUG: "false"
SERVER_HOST: "0.0.0.0"
SERVER_PORT: "8080"
